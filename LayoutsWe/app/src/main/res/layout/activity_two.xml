<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F2F">

    <TextView
        android:id="@+id/tvAnd03"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_centerHorizontal="true"
        android:text="Hello AND 03"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_below="@+id/tvAnd03"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Layouts"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"/>

    <View
        android:id="@+id/circle"
        android:background="@drawable/blue_circle"
        android:layout_height="73dp"
        android:layout_width="85dp"
        android:layout_marginTop="197dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Name : Lloyd Dcosta"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:drawableRight="@drawable/ic_name"
        android:drawablePadding="8dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvAge"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/tvName"
        android:text="Age : 50"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/btnNext"
        android:background="#00FF00"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:text="Next"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:padding="15dp"
        android:gravity="center"/>

    <View
        android:id="@+id/viewThree"
        android:layout_above="@+id/btnNext"
        android:background="#C4C4C4"
        android:layout_height="12dp"
        android:layout_width="141dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="29dp"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/viewTwo"
        android:layout_above="@+id/viewThree"
        android:background="#C4C4C4"
        android:layout_height="20dp"
        android:layout_width="166dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="19dp"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/viewOne"
        android:layout_above="@+id/viewTwo"
        android:background="#C4C4C4"
        android:layout_height="31dp"
        android:layout_width="183dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="19dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>